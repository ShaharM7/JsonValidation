{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/FamiliesStatus",
  "definitions": {
    "FamiliesStatus": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "people": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/Person"
            }
          }
        },
        "families": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/Family"
            }
          }
        }
      },
      "required": [
        "families",
        "people"
      ]
    },
    "Family": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "surname": {
          "type": "string"
        },
        "has_kids": {
          "type": "boolean"
        },
        "parents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "kids": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "null"
            }
          ]
        },
        "kids_num": {
          "type": "integer"
        }
      },
      "required": [
        "has_kids",
        "kids",
        "kids_num",
        "parents",
        "surname"
      ],
      "title": "Family"
    },
    "Person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        },
        "age": {
          "type": "integer"
        },
        "family_member": {
          "enum": ["kid", "parent"]
        }
      },
      "required": [
        "age",
        "family_member",
        "name",
        "surname"
      ],
      "title": "Person"
    }
  }
}