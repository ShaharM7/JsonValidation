{
  "type": "object",
  "required": [
    "people",
    "families"
  ],
  "additionalProperties": false,
  "properties": {
    "people": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/people"
      }
    },
    "families": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/family"
      }
    }
  },
  "$defs": {
    "people": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\d{5}$": {
          "type": "object",
          "required": [
            "name",
            "surname",
            "age",
            "family_member"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "surname": {
              "type": "string"
            },
            "age": {
              "type": "number",
              "minimum": 0
            },
            "family_member": {
              "type": "string",
              "enum": [
                "kid",
                "parent"
              ]
            }
          }
        }
      }
    },
    "family": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^999-\\d{4}$": {
          "type": "object",
          "required": [
            "surname",
            "has_kids",
            "parents",
            "kids",
            "kids_num"
          ],
          "additionalProperties": false,
          "properties": {
            "surname": {
              "type": "string"
            },
            "has_kids": {
              "type": "boolean"
            },
            "parents": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "kids": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string"
              }
            },
            "kids_num": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}