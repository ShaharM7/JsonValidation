{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "$id": "https://families-status.com",
  "type": "object",
  "required": [
    "people",
    "families"
  ],
  "additionalProperties": false,
  "properties": {
    "people": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/people"
      }
    },
    "families": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/family"
      }
    }
  },
  "$defs": {
    "people": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\d{5}$": {
          "type": "object",
          "required": [
            "name",
            "surname",
            "age",
            "family_member"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[A-Za-z\\s]*$",
              "$ref": "#/definitions/nonEmptyString"
            },
            "surname": {
              "type": "string",
              "pattern": "^[A-Za-z\\s]*$",
              "$ref": "#/definitions/nonEmptyString"
            },
            "age": {
              "type": "number",
              "minimum": 0
            },
            "family_member": {
              "type": "string",
              "enum": [
                "kid",
                "parent"
              ]
            }
          },
          "if": {
            "properties": { "family_member": { "const": "kid" } }
          },
          "then": {
            "properties": { "age": { "maximum": 17 } }
          },
          "else": {
            "properties": { "age": { "minimum": 18 } }
          }
        }
      }
    },
    "family": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^999-\\d{4}$": {
          "type": "object",
          "required": [
            "surname",
            "has_kids",
            "parents",
            "kids",
            "kids_num"
          ],
          "additionalProperties": false,
          "properties": {
            "surname": {
              "type": "string",
              "pattern": "^[A-Za-z\\s]*$",
              "$ref": "#/definitions/nonEmptyString"
            },
            "has_kids": {
              "type": "boolean"
            },
            "parents": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "pattern": "^[A-Za-z\\s]*$"
              }
            },
            "kids": {
              "type": [
                "array",
                "null"
              ],
              "items": {
                "type": "string",
                "pattern": "^[A-Za-z\\s]*$"
              },
              "minItems": 0
            },
            "kids_num": {
              "type": "number",
              "minimum": 0
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "kids_num": { "maximum": 0 } }
              },
              "then": {
                "properties": { "kids": { "maxItems": 0 } }
              },
              "else": {
                "properties": { "kids": { "minItems": 1 } }
              }
            }
          ]
        }
      }
    }
  },
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "personMustBelongToFamily": {
    },
    "eachFamilyMemberMustExistAsPerson": {
    }
  }
}